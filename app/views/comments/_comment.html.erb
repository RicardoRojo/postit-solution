<% show_post ||= show_post = false %>
<div class="row">
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_comment_path(comment, vote: true), method: :post, remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
      <span id="comment-<%= comment.id %>-votes"> <%= comment.total_votes == 1 ? "1 vote" : "#{comment.total_votes} votes" %></span>
      <br/>
      <%= link_to vote_comment_path(comment, vote: false), method: :post, remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
  <% end %>
  <div class="span8 well">
    <p><%= comment.body %> </p>
    <p class="quiet">Created at: <%= format_date_time(comment.created_at) %> by <%= link_to comment.creator.username, user_path(comment.creator) %>
     <%= show_post ? " In #{link_to comment.post.title, post_path(comment.post)}".html_safe : "" %>
    </p>
  </div>
</div>