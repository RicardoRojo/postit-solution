<%= render "shared/content_title", title: "Register" %>
<div class="well">
  <%= render "shared/errors", error_obj: @user %>
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Register", class: "btn btn-small btn-success" %>
  <% end %>
</div>